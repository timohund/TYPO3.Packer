{
    "push": {
        "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "vcs": true
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}"
    },
    "provisioners": [
        {
            "environment_vars": [
                "BOX_TYPE={{user `box_type`}}",
                "CLEANUP_PAUSE={{user `cleanup_pause`}}",
                "UPDATE={{user `update`}}",
                "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "ftp_proxy={{user `ftp_proxy`}}",
                "rsync_proxy={{user `rsync_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ],
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/base.sh",
                "scripts/update.sh",
                "scripts/vagrant.sh",
                "scripts/sshd.sh",
                "scripts/vmtool.sh"
            ],
            "type": "shell"
        },
        {
            "type": "ansible-local",
            "playbook_dir": "ansible",
            "playbook_file": "ansible/TxSolr.yml",
            "role_paths": [
                "ansible/roles/common",
                "ansible/roles/composer",
                "ansible/roles/composer-shallow",
                "ansible/roles/solr",
                "ansible/roles/geerlingguy.daemonize",
                "ansible/roles/geerlingguy.java",
                "ansible/roles/mariadb",
                "ansible/roles/memcached",
                "ansible/roles/nginx",
                "ansible/roles/php-ondrej",
                "ansible/roles/phpbrew",
                "ansible/roles/phpcommon",
                "ansible/roles/redis",
                "ansible/roles/typo3",
                "ansible/roles/typo3-solr"
            ]
        },
        {
            "environment_vars": [
                "BOX_TYPE={{user `box_type`}}",
                "CLEANUP_PAUSE={{user `cleanup_pause`}}",
                "UPDATE={{user `update`}}",
                "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "ftp_proxy={{user `ftp_proxy`}}",
                "rsync_proxy={{user `rsync_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ],
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/mariadb_rootlogin.sh",
                "scripts/minimize.sh",
                "scripts/cleanup.sh"
            ],
            "type": "shell"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "/install/vmlinuz noapic ",
                "initrd=/install/initrd.gz ",
                "file=/floppy/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ user `hostname` }} ",
                "grub-installer/bootdev=/dev/sda<wait> ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "passwd/user-fullname={{ user `ssh_fullname` }} ",
                "passwd/user-password={{ user `ssh_password` }} ",
                "passwd/user-password-again={{ user `ssh_password` }} ",
                "passwd/username={{ user `ssh_username` }} ",
                "-- <enter>"
            ],
            "hard_drive_interface": "sata",
            "headless": "{{ user `headless` }}",
            "boot_wait": "10s",
            "disk_size": "{{ user `disk_size` }}",
            "floppy_files": [
                "http/preseed.cfg"
            ],
            "guest_os_type": "Ubuntu_64",
            "http_directory": "http",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "sha256",
            "iso_interface": "sata",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "30m",
            "ssh_port": 22,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{ user `memory_size` }}"
                ]
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": "{{user `compression_level`}}",
                "override": {
                    "vmware": {
                        "compression_level": 0
                    }
                },
                "keep_input_artifact": false,
                "output": "box/{{.Provider}}/ubuntu1604-{{user `box_type`}}-{{user `version`}}.box"
            },
            {
                "type": "atlas",
                "only": [
                    "virtualbox-iso"
                ],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "virtualbox",
                    "version": "{{user `version`}}"
                }
            }
        ]
    ],
    "variables": {
        "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "atlas_username": "dkd",
        "atlas_name": "solr-typo3-devbox",
        "box_type": "solr-typo3-devbox",
        "cleanup_pause": "",
        "compression_level": "7",
        "custom_script": ".",
        "disk_size": "40690",
        "memory_size": "2048",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "true",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
        "iso_name": "ubuntu-16.04.2-server-amd64.iso",
        "iso_path": "iso",
        "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.2-server-amd64.iso",
        "no_proxy": "{{env `no_proxy`}}",
        "rsync_proxy": "{{env `rsync_proxy`}}",
        "hostname": "vagrant",
        "ssh_fullname": "vagrant",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "update": "false",
        "version": "4.0.4"
    }
}
